   "source": [
    "import numpy as np\n",
    "import matplotlib.pyplot as plt\n",
    "%matplotlib inline\n",
    "\n",
    "def normal_equation(X, Y):\n",
    "    theta = (X.T.dot(X)).I.dot(X.T).dot(Y)\n",
    "    return theta"
   ]